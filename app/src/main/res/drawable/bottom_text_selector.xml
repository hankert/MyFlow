<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获得焦点但未按下时的背景图片 -->
    <item android:state_focused="true" android:color="@color/color_00D9B9"/>
    <!-- 按下时的背景图片 -->
    <item android:state_pressed="true" android:color="@color/color_00D9B9"/>
    <!-- 按下时的背景图片 -->
    <item android:state_selected="true" android:color="@color/color_00D9B9"/>
    <!-- 默认时的背景图片 -->
    <item android:color="#a9a9a9"/>

</selector>